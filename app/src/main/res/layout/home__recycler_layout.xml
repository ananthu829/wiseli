<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_08"
    android:layout_margin="10dp"
    android:gravity="center"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10"
        android:gravity="center"
        android:weightSum="100"
        android:orientation="horizontal">

        <com.camerash.toggleedittextview.ToggleEditTextView
            android:id="@+id/item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="Circle 1"
            android:hint="Circle 1"
            android:maxLines="1"
            app:tetv_editTextBottomLineColor="@color/darkColorAccent"
            app:tetv_editTextViewColor="@color/darkPrimaryText"
            app:tetv_textViewColor="@color/darkPrimaryText" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10" />

        <com.camerash.toggleedittextview.ToggleEditButton
            android:id="@+id/editBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_24"
            android:layout_weight="10"
            app:teb_animationOffset="100"
            app:teb_edit="false"
            app:teb_tint="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5" />


        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_delete_24" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="10" />

    </LinearLayout>
</androidx.cardview.widget.CardView>