<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvItemHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_08"
                android:text="Product "
                android:textColor="@color/semi_back"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edit_item"
                android:layout_width="@dimen/_100"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvQtyHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_08"
                android:text="Quantity"
                android:textColor="@color/semi_back"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edit_quantity"
                android:layout_width="@dimen/_100"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="@dimen/dimens30"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ok"
                android:layout_width="@dimen/dimens30"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:visibility="gone"
                android:src="@drawable/ic_done" />
            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/dimens30"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_edit_24" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/_30"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>